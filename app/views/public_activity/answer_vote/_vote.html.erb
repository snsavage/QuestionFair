<div class="media">
  <div class="media-left">
    <%= image_tag(gravatar_url(activity.owner), size: "48x48", alt: "Gravatar", class: "media-object") %>
  </div>
  <div class="media-body">
    <p><strong><%= link_to activity.owner.nickname.capitalize, user_path(activity.owner) %> voted on an answer <%= time_ago_in_words(activity.created_at, include_seconds: false) %> ago.</strong></p>
    <p>Question: <%= link_to activity.trackable.answer.question.question, activity.trackable.answer.question %></p>
    <p>Voted on Answer: <%= activity.trackable.answer.answer %></p>
  </div>
</div>