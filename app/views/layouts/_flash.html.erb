<div class="col-sm-offset-1 col-sm-10">
  <% flash.each do |name, msg| %>
    <% flash_type = bootstrap_class_for(name) %>
    <div class="row">
      <div class="col-md-12">
        <%= tag :div, class: "alert alert-#{flash_type}", role: "#{name}" %>
          <%= content_tag :div, msg, id: "flash_#{name}" %>
        </div>
      </div>
    </div>
  <% end %>
</div>