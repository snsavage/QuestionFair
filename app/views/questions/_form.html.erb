<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= "#{@title}" %></h3>
  </div>

  <div class="panel-body">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <%= render partial: "layouts/form_errors", object: @question %>
      </div>
    </div>
    
    <div class="row">
      <%= form_for(@question, html: { class: "form-horizontal"}) do |form| %>

        <div class="form-group">
          <div class="col-sm-1">
            <%= form.label "Question", class: "control-label" %>
          </div>
          <div class="col-sm-9">
            <%= form.text_area :question, class: "form-control", rows: "3",
              placeholder: "Ask your question here." %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-sm-1">
            <%= form.label "Category", class: "control-label" %>
          </div>
          <div class="col-sm-9" >
            <%= form.select(:category, Question::CATEGORIES, 
              { prompt: "Select a Category" }, { class: "form-control" } ) %>
          </div>
        </div>
      
        <div class="form-group">
          <div class="col-sm-offset-1 col-sm-9">
            <%= form.submit "#{@button_label}", class: "btn btn-primary" %>
            <%= link_to "Cancel", questions_path, class: "btn btn-danger" %> 
          </div>
        </div>

      <% end %>

    </div>

  </div>
</div>

