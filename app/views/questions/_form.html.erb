<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= "#{@title}" %></h3>
  </div>

  <div class="panel-body">


    <%= render partial: "layouts/form_errors", object: @question %>

    <%= form_for(@question, html: { class: "form-horizontal"}) do |form| %>

      <div class="form-group">
        <%= form.label "Question", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.text_area :question, class: "form-control", rows: "3",
            placeholder: "Ask your question here." %>
        </div>
      </div>
      
      <div class="form-group">
        <%= form.label "Category", class: "col-sm-2 control-label" %>
        <div class="col-sm-10" >
          <%= form.select(:category, Question::CATEGORIES, 
            { prompt: "Select a Category" }, { class: "form-control" } ) %>
        </div>
      </div>
    
      <div class="pull-right">
        <%= form.submit "#{@button_label}", class: "btn btn-primary" %>
        <%= link_to "Cancel", questions_path, class: "btn btn-danger" %> 
      </div>

    <% end %>

  </div>
</div>

