<div class="col-sm-12">
  <h4>Profile for <%= @user.nickname %><small> | <%= @points %> Points</small></h4>

  <div class="col-md-6">
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Questions</h4>
      </div>
      <div class="panel-body">
        <ul>
          <% for question in @questions %>
            <li>"<%= link_to question.question, question_path(question) %>"" asked 
              <%= time_ago_in_words(question.created_at, include_seconds: false).titleize %> ago. </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">Answers</h4>
      </div>
      <div class="panel-body">
        <ul>
          <% for answer in @answers %>
            <li>Answered the question "<%= link_to answer.question.question, question_path(answer.question) %>" <br />
              With the answer "<%= answer.answer %>" <br />
              <%= time_ago_in_words(answer.created_at, include_seconds: false).titleize %> ago. </li>
          <% end %>
        </ul>
      </div>
    </div>    

  </div>


    



</div>