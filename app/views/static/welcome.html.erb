<div class="col-md-12">
  <div class="jumbotron welcome">
    
    <%= image_tag("logo_large.png", class: "welcome-logo", alt: "QuestionFair.com") %>

  </div>

  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3>Ask, Answer &amp; Earn Points</h3>
          <p>Find questions by category or a nearby location.  Ask questions, answer questions 
            and vote on answers.  Earn points as you participate!</p>
          <p><%= link_to "Browse Questions Now", questions_path, class: "btn btn-primary" %></p>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3>Search for Questions &amp; Answers</h3>
          <p>Search for the questions and answers you need!</p>
          <%= form_tag questions_path, :method => 'get', role: "search" do %>
            <div class="input-group">
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search" %>
              <span class="input-group-btn">
                <%= button_tag(type: :submit, class: "btn btn-default") do %>
                  <span class="glyphicon glyphicon-search"></span>
                <% end %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3>Sign Up &amp; Invite Your Friends</h3>
          <p>Sign Up to join in with you own questions and answers.  Invite your friends and compete for points.</p>
          <p><%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary navbar-btn" %></p>
        </div>
      </div>
    </div>
  </div>
</div>



