<div class="col-md-offset-1 col-sm-8">

  <h2>Change your password</h2>

  <hr />

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
    html: { method: :put, class: "form-hortizontal" }) do |f| %>
    
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "New password", class: "control-label col-sm-3" %>
      <div class="col-sm-5">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", 
          class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password", class: "control-label col-sm-3" %>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, autocomplete: "off", 
          class: "form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-5">
        <%= f.submit "Change my password", class: "btn btn-default" %>
      </div>
    </div>
  <% end %>

  <hr />

  <%= render "devise/shared/links" %>

</div>