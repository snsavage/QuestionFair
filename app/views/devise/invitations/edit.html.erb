<div class="col-md-offset-1 col-sm-8">

  <h2><%= t 'devise.invitations.edit.header' %></h2>

  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, :class => "form-horizontal" } do |f| %>
    
    <%= devise_error_messages! %>
    
    <div class="form-group">
      <%= f.label :nickname, class: "control-label col-sm-3" %>
      <div class="col-sm-5">
        <%= f.text_field :nickname, class: "form-control" %>
        <span class="help-block">
          For public display on the site.  (2 to 15 Characters.)
        </span>
      </div>
    </div>

    <div class="form-group">
      <span class="col-sm-offset-3 col-sm-5 help-block">QuestionFair.com's avatars (user images) are provided through Gravatar using your 
        supplied email address.  If you would like to add your own avatar visit 
        <%= link_to "Gravatar.com", "https://en.gravatar.com", target: "_blank" %>.</span>
    </div>
    
    <%= f.hidden_field :invitation_token %>

    <div class="form-group">
      <%= f.label :password, class: "control-label col-sm-3" %>
      <div class="col-sm-5">
        <%= f.password_field :password, autocomplete: "off", 
          class: "form-control"%>
        <span class="help-block">
          <% if @validatable %>
            (<%= @minimum_password_length %> Characters Minimum.)
        <% end %>
        </span>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation, class: "control-label col-sm-3" %>
      <div class="col-sm-5">
        <%= f.password_field :password_confirmation, autocomplete: "off", 
          class: "form-control" %>
      </div>
    </div>

    <div class="form-group hidden_time_zone">
      <%= f.label :time_zone, class: "control-label col-sm-3" %>
      <div class="col-sm-5">
        <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, 
           { prompt: "Select a Category" }, { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-5">
        <div class="checkbox">
          <label>
            <%= f.check_box :mail_chimp %>
            <%= f.label :mail_chimp, "Sign up to our newsletter." %>
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-5">
        <div class="checkbox">
          <label>
            <%= f.check_box :terms %>
            <%= f.label :terms do
              "I agree to the #{link_to("Terms of Service", terms_path, target: "_blank")} 
              and #{link_to("Privacy Policy", privacy_path, target: "_blank")}.".html_safe
            end %>
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-5">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-default" %>
      </div>
    </div>

  <% end %>

  <hr />
</div>
