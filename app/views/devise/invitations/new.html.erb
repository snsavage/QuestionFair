<div class="col-md-offset-1 col-sm-8">

  <h2><%= t "devise.invitations.new.header" %></h2>

  <hr />

  <%= form_for resource, :as => resource_name, 
    :url => invitation_path(resource_name), 
    :html => {:method => :post, :class => "form-horizontal"} do |f| %>
    
    <%= devise_error_messages! %>

    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="form-group">
        <%= f.label field, class: "control-label col-sm-3" %>
        <div class="col-sm-5">
          <%= f.text_field field, class: "form-control" %>
        </div>
      </div>
    <% end -%>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-5">
        <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
  
  <hr />

</div>